<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#3300E676" /> <stroke android:width="2dp" android:color="@color/racing_green" />
            <corners android:radius="4dp" /> </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#2A2A2A" /> <stroke android:width="1dp" android:color="#555555" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>